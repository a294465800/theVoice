/* promotion.wxss */
.container {
  background-color: #ececec;
  padding-bottom: 30rpx;
}

/*
  便民信息
*/

.page {
  padding-top: 20rpx;
}

.infos_item {
  padding: 20rpx 30rpx 20rpx;
  background-color: #fff;
  box-shadow: 4rpx 4rpx 2rpx #ccc;
  margin-bottom: 30rpx;
}

.infos_item_head, .infos_item_pic_list, .nav_bar,
.infos_item_comments_item_comment_btns {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #999;
}

/*.infos_head, */

.infos_bottom {
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  color: #999;
  margin-top: 20rpx;
}

.infos_bottom {
  margin-top: 50rpx;
}

.infos_item_head_wrap {
  flex: 1;
}

.infos_item_head {
  margin: 10rpx 0;
  justify-content: flex-start;
}

.infos_item_head_img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.infos_item_head_name {
  font-size: 18px;
  margin: 10rpx 0 10rpx 30rpx;
  color: #333;
  word-break: break-all;
  word-wrap: break-word;
}

.infos_item_time {
  font-size: 14px;
  margin-left: 30rpx;
  color: #999;
}

.infos_item_pic_list {
  justify-content: flex-start;
  flex-wrap: wrap;
}

.infos_item_pic {
  width: 200rpx;
  height: 250rpx;
  margin: 0 26rpx 30rpx 0;
  border: 2rpx solid #ececec;
}

.infos_item_message {
  margin-bottom: 30rpx;
  font-size: 16px;
  text-indent: 2em;
   word-wrap: break-word;
  word-break: break-all; 
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
}

.infos_item_info {
  color: #666;
  font-size: 14px;
}

/*
  发布
*/

.infos_publish {
  width: 60px;
  position: fixed;
  right: 70rpx;
  bottom: 50rpx;
  z-index: 1;
}
