.mine_login {
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
}

.mine_login, .mine_funtion_part {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  width: 100%;
}

.mine_login_img {
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
}

.mine_longin_tip {
  flex: 1;
  font-size: 16px;
  padding-left: 30rpx;
  color: #999;
}

.mine_funtion_part {
  padding: 24rpx 30rpx;
  margin-bottom: 30rpx;
}

.mine_funtion_part_icon {
  width: 18px;
}

.mine_funtion_part_titile {
  flex: 1;
  font-size: 16px;
  color: #000;
  padding-left: 20rpx;
}