/* mine.wxss */

.container {
  background-color: #eee;
  height: 100%;
  position: relative;
}

/*
  登录
*/

.mine_login {
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
}

.mine_login, .mine_funtion_part {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  width: 100%;
}

.mine_login_img {
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
}

.mine_longin_tip {
  flex: 1;
  font-size: 16px;
  padding-left: 30rpx;
  color: #999;
}

.login {
  color: #333;
}

.mine_funtion_part {
  padding: 24rpx 30rpx;
  margin-bottom: 2rpx;
}

.mine_funtion_part_icon {
  width: 18px;
  height: 18px;
}

.mine_funtion_part_titile {
  flex: 1;
  padding-left: 20rpx;
}

.mine_button {
  border-radius: 0;
  text-align: left;
}

.mine_button::after {
  border: 0;
}

/*
  退出
*/

.logout {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  font-size: 16px;
}

/*  
  消息提醒
*/

.alert_part {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.alert_part .alert_text {
  font-size: 16px;
  color: #000;
}

.news_alert {
  border-radius: 50%;
  background-color: #ed3f14;
  color: #fff;
  font-size: 14px;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
}
