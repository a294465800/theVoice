/**index.wxss**/

.container {
  background-color: #ececec;
  padding-bottom: 30rpx;
  min-height: 100%;
}

/*
  轮播广告区域  
*/

.swiper_wrap {
  width: 100%;
}

.ad_wrap {
  width: 100%;
  height: 400rpx;
}

.ad_img {
  width: 100%;
  height: 100%;
}

/*
  便民信息
*/

.page {
  padding-top: 20rpx;
  flex: 1;
}

.infos_item {
  background-color: #fff;
  box-shadow: 4rpx 4rpx 2rpx #ccc;
  margin-bottom: 30rpx;
}

.infos_item_head, .infos_item_pic_list, .nav_bar,
.infos_item_comments_item_comment_btns {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #999;
}

/*.infos_head, */

.infos_bottom {
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  color: #999;
  margin-top: 20rpx;
}

.infos_bottom {
  margin-top: 50rpx;
}

.infos_item_head_wrap {
  flex: 1;
}

.infos_item_head {
  margin: 10rpx 0;
  justify-content: flex-start;
  padding: 20rpx 30rpx;
}

.infos_item_head_img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.infos_item_head_name {
  font-size: 18px;
  margin: 10rpx 0 10rpx 30rpx;
  color: #333;
  word-break: break-all;
  word-wrap: break-word;
}

.infos_item_time {
  font-size: 14px;
  margin-left: 30rpx;
  color: #999;
}

.infos_item_pic_alone {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.infos_item_pic_one {
  width: 70%;
  border: 2rpx solid #ececec;
}

.infos_item_pic_list {
  justify-content: flex-start;
  flex-wrap: wrap;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.infos_item_pic {
  width: 200rpx;
  height: 200rpx;
  margin: 0 26rpx 30rpx 0;
  border: 2rpx solid #ececec;
}

.infos_item_message {
  margin-bottom: 30rpx;
  font-size: 16px;
  padding-left: 30rpx;
  padding-right: 30rpx;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
}

.infos_item_info, .infos_item_info_part {
  display: flex;
  align-items: center;
}

.border_right {
  border-right: 2rpx solid #ececec;
}

.infos_item_info {
  border: 2rpx solid #ececec;
  border-bottom: 0;
}

.infos_item_info_part {
  flex: 1;
  justify-content: center;
  padding: 20rpx 30rpx;
}

.infos_item_info_part_img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.infos_item_info_part_text {
  color: #666;
  font-size: 14px;
}

/*
  发布
*/

.infos_publish {
  width: 60px;
  height: 60px;
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  z-index: 2;
}

/*  
  视频
*/

.infos_item_video {
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  width: 100%;
  min-height: 225px; 
}

.infos_item_video video {
  width: 100%;
  height: 225px;
}
