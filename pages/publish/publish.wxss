/* publish.wxss */

.container {
  background-color: #eee;
  min-height: 100%;
   padding-bottom: 150rpx; 
}

/*
  输入区
*/

.publish_area {
  width: 100%;
  height: 400rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}

.comment_left {
  color: #1ccca9;
  font-size: 15px;
  padding-right: 30rpx;
}

.publish_function {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

/*
  图片区域
*/

.publish_imgs {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.publish_img {
  width: 180rpx;
  height: 180rpx;
  border: 2rpx solid #ececec;
  margin: 0 15rpx 30rpx;
  position: relative;
  overflow: unset;
}

.img_cancel {
  position: absolute;
  top: -9px;
  right: -9px;
}

/*
  提醒
*/

.publish_warning {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.publish_warning_icon {
  width: 20px;
  height: 20px;
  margin-right: 10rpx;
}

.publish_warning_title {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}

.publish_warning_name {
  font-size: 18px;
  color: #feb300;
}

.publish_warning_content {
  padding-left: 20rpx;
}

.publish_warning_content text {
  font-size: 14px;
  color: #888;
}

/*
  匿名
*/

.publish_nobody {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.publish_nobody_img {
  margin-right: 10rpx;
  width: 15px;
}

.publish_nobody_titie {
  font-size: 16px;
  color: #666;
}

/*  
  发布
*/

.publish {
  color: #fff;
  background-color: #1ccca9;
  padding: 20rpx 0;
  border-radius: 50rpx;
  box-shadow: 6rpx 6rpx 4rpx #ccc;
  text-align: center;
  max-width: 240rpx;
  font-size: 16px;
  /* position: fixed;
  left: 0;
  right: 0;
  bottom: 30rpx; */
  margin: 100rpx auto 0;
}
