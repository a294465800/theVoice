<!--publish.wxml-->
<view class="container">
  <!--输入框  -->
  <textarea class="publish_area" auto-focus maxlength="200" placeholder="编辑信息..." />
  <!--/输入框  -->

  <!--图片部分  -->
  <view class="publish_imgs">
    <image src="http://yuxuange.com/show/img/20/12L260C3964P-1PK.jpg" mode="aspectFill" class="publish_img"></image>
    <image src="http://yuxuange.com/show/img/20/12L260C3964P-1PK.jpg" mode="aspectFill" class="publish_img"></image>
    <image src="/images/icon/add_img.png" mode="aspectFill" class="publish_img"></image>
  </view>
  <!--/图片部分  -->

  <!--提醒  -->
  <view class="publish_warning">
    <view class="publish_warning_title">
      <image src="/images/icon/remind.png" mode="widthFix" class="publish_warning_icon"></image>
      <view class="publish_warning_name">提醒：</view>
    </view>
    <view class="publish_warning_content">
      <text>1.个人版免费发布，商家促销信息每条10元。
      2.审核成功后将予以显示，请耐心等待。</text>
    </view>
  </view>
  <!--/提醒  -->

  <!--匿名  -->
  <view class="publish_nobody">
    <image src="{{nobody.no}}" class="publish_nobody_img" mode="widthFix"></image>
    <view class="publish_nobody_titie">匿名发布</view>
  </view>
  <!--/匿名  -->

  <!--发布  -->
  <view class="publish" catchtap="publish">发布</view>
  <!--/发布  -->

</view>